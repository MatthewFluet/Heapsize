#include "Cmm.h"

unpackClosurePtrs ( P_ closure )
{
    W_ clos, ptrArray;

    clos = UNTAG(closure);
    ("ptr" ptrArray) = foreign "C" heap_view_closurePtrs(MyCapability() "ptr", clos "ptr");

    return (ptrArray);
}

closureSize ( P_ closure )
{
    W_ len;
    (len) = foreign "C" heap_view_closureSize(UNTAG(closure) "ptr");
    return (len);
}
